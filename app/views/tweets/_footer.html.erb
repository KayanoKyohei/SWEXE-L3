<style>
.tab {
    display: flex;
    flex-wrap: wrap;
    background-color: #efefef;
    padding-bottom: 1rem;
    overflow: hidden;
}

.tab-item {
    display: none;
}


.tab-item+label {
    flex: 1;
    order: -1;
    cursor: pointer;
    padding: 1rem .5em;
    margin-bottom: 1rem;
    border-bottom: 3px solid #ddd;
    color: #999;
    white-space: nowrap;
    text-align: center;
}

.tab-content {
    width: 100%;
    padding: 0 1rem;
    display: none;
    overflow: hidden;
    color: #555;
    line-height: 1.5;
}


.tab-item:checked+label {
    border-bottom: 3px solid #379beb;
    color: #379beb;
    transition: .5s ease-in-out;
}

.tab-item:checked+label+.tab-content {
    display: block;
    padding: 0 1rem;
    color: #333;
}
</style>

<div class="tab">
    <input type="radio" name="radioTab" class="tab-item" checked="" id="tab1">
    <label for="tab1">ツイート</label>
    <div class="tab-content"><%= link_to '新規追加', 'tweets/new' %></div>

    <input type="radio" name="radioTab" class="tab-item" id="tab2">
    <label for="tab2">ツイート一覧</label>
    <div class="tab-content"><%= link_to 'ツイート一覧', 'tweets/show' %></div>

    <input type="radio" name="radioTab" class="tab-item" id="tab3">
    <label for="tab3">メディア</label>
    <div class="tab-content"><%= link_to 'メディア', 'tweets/index' %></div>
</div>